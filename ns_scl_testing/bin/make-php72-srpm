set -e

specfile=$1
export LANG=C


arch_cfg=$(arch)
if [[ $arch_cfg = "armv7l" ]]; then
    export mockcfg=${mockcfg:-php72_scl-7-armhfp}
    clean_option="--no-clean --no-cleanup-after"
fi

prep-sources ${specfile}
mock --resultdir=. -r "${mockcfg}" -D "dist .${dist:-ns7}" \
     --buildsrpm --spec "${specfile}" --sources . $clean_option
     


